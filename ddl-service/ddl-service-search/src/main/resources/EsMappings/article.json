{
  "settings": {
    "analysis": {
      "analyzer": {
        "text_anlyzer": {
          "type":"custom",
          "tokenizer": "ik_max_word",
          "filter": "py"
        },
        "completion_analyzer": {
          "type":"custom",
          "tokenizer": "keyword",
          "filter": "py"
        }
      },
      "filter": {
        "py": {
          "type": "pinyin",
          "keep_full_pinyin": false,
          "keep_joined_full_pinyin": true,
          "keep_original": true,
          "limit_first_letter_length": 16,
          "remove_duplicated_term": true,
          "none_chinese_pinyin_tokenize": false
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "userId": {
        "type": "keyword"
      },
      "userNickname": {
        "type": "text",
        "analyzer": "text_anlyzer",
        "search_analyzer": "ik_smart"
      },
      "title": {
        "type": "text",
        "analyzer": "text_anlyzer",
        "search_analyzer": "ik_smart"
      },
      "summary": {
        "type": "keyword",
        "index": false
      },
      "content": {
        "type": "text",
        "analyzer": "text_anlyzer",
        "search_analyzer": "ik_smart"
      },
      "group": {
        "type": "text",
        "analyzer": "text_anlyzer",
        "search_analyzer": "ik_smart"
      },
      "tagList": {
        "properties": {
          "id": {
            "type": "keyword"
          },
          "name": {
            "type": "text",
            "analyzer": "text_anlyzer",
            "search_analyzer": "ik_smart"
          }
        }
      },
      "suggestion": {
        "type": "completion",
        "analyzer": "completion_analyzer"
      },
      "viewNum": {
        "type": "integer"
      },
      "collectNum": {
        "type": "integer"
      },
      "upNum": {
        "type": "integer"
      },
      "downNum": {
        "type": "integer"
      }
    }
  }
}
